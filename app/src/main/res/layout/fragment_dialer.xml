<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Fragment.DialerFragment">

    <androidx.cardview.widget.CardView
            android:id="@+id/DialerOptionCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="15dp"
            android:visibility="gone">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dialer Options"
                android:textColor="@color/PrimaryColor"
                android:textSize="30dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap Once: Speak the number"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap Twice: Call"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Press Back: Clear the number"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_margin="5dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/DialerLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">



            <TextView
                android:id="@+id/dialPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="30dp"
                android:gravity="center"
                android:hint="Enter phone number"
                android:inputType="number"/>


        <LinearLayout
            android:id="@+id/secondLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_weight="1">

            <Button
                android:id="@+id/ButtonOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/one"
                android:textColor="@color/TextIcon"
                android:textStyle="bold"
                android:textSize="40sp"
                android:onClick="btnClicked"
                android:layout_margin="3dp"/>

            <Button
                android:id="@+id/ButtonTwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/two"
                android:textColor="@color/TextIcon"
                android:textStyle="bold"
                android:textSize="40sp"
                android:onClick="btnClicked"
                android:layout_margin="3dp"/>

            <Button
                android:id="@+id/ButtonThree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/three"
                android:textColor="@color/TextIcon"
                android:textStyle="bold"
                android:textSize="40sp"
                android:onClick="btnClicked"
                android:layout_margin="3dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_weight="1">

            <Button
                android:id="@+id/ButtonFour"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/four"
                android:textColor="@color/TextIcon"
                android:textStyle="bold"
                android:textSize="40sp"
                android:onClick="btnClicked"
                android:layout_margin="3dp"/>

            <Button
                android:id="@+id/ButtonFive"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/five"
                android:textColor="@color/TextIcon"
                android:textStyle="bold"
                android:textSize="40sp"
                android:onClick="btnClicked"
                android:layout_margin="3dp"/>

            <Button
                android:id="@+id/ButtonSix"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/six"
                android:textColor="@color/TextIcon"
                android:textStyle="bold"
                android:textSize="40sp"
                android:onClick="btnClicked"
                android:layout_margin="3dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourthLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_weight="1">

            <Button
                android:id="@+id/ButtonSeven"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/seven"
                android:textColor="@color/TextIcon"
                android:textStyle="bold"
                android:textSize="40sp"
                android:onClick="btnClicked"
                android:layout_margin="3dp"/>

            <Button
                android:id="@+id/ButtonEight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/eight"
                android:textColor="@color/TextIcon"
                android:textStyle="bold"
                android:textSize="40sp"
                android:onClick="btnClicked"
                android:layout_margin="3dp"/>

            <Button
                android:id="@+id/ButtonNine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/nine"
                android:textColor="@color/TextIcon"
                android:textStyle="bold"
                android:textSize="40sp"
                android:onClick="btnClicked"
                android:layout_margin="3dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fifthLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_weight="1">

            <Button
                android:id="@+id/ButtonStar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/star"
                android:textColor="@color/TextIcon"
                android:textStyle="bold"
                android:textSize="40sp"
                android:onClick="btnClicked"
                android:layout_margin="3dp"/>

            <Button
                android:id="@+id/ButtonZero"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/zero"
                android:textColor="@color/TextIcon"
                android:textStyle="bold"
                android:textSize="40sp"
                android:onClick="btnClicked"
                android:layout_margin="3dp"/>

            <Button
                android:id="@+id/ButtonHash"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/hash"
                android:textColor="@color/TextIcon"
                android:textStyle="bold"
                android:textSize="40sp"
                android:onClick="btnClicked"
                android:layout_margin="3dp"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>

